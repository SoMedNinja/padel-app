{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://padelnative.local/schemas/permissions-capability-matrix.schema.json",
  "title": "PermissionCapabilityMatrix",
  "description": "capability -> allowed/blocked/limited/action_needed -> user guidance",
  "type": "object",
  "required": ["notifications", "background_refresh", "biometric_passkey", "calendar"],
  "additionalProperties": false,
  "properties": {
    "notifications": { "$ref": "#/$defs/stateGuidance" },
    "background_refresh": { "$ref": "#/$defs/stateGuidance" },
    "biometric_passkey": { "$ref": "#/$defs/stateGuidance" },
    "calendar": { "$ref": "#/$defs/stateGuidance" }
  },
  "$defs": {
    "stateGuidance": {
      "type": "object",
      "required": ["allowed", "blocked", "limited", "action_needed"],
      "additionalProperties": false,
      "properties": {
        "allowed": { "type": "string", "minLength": 1 },
        "blocked": { "type": "string", "minLength": 1 },
        "limited": { "type": "string", "minLength": 1 },
        "action_needed": { "type": "string", "minLength": 1 }
      }
    }
  }
}
