{
  "$schema": "https://example.com/design-tokens.schema.json",
  "meta": {
    "description": "Note for non-coders: this file is the single source of truth for shared design values across web and iOS.",
    "version": "1.1.0"
  },
  "color": {
    "semantic": {
      "light": {
        "primary": "#d32f2f",
        "primaryStrong": "#b71c1c",
        "onPrimary": "#ffffff",
        "secondary": "#ff8f00",
        "success": "#2e7d32",
        "warning": "#ed6c02",
        "error": "#d32f2f",
        "info": "#0288d1",
        "surface": "#ffffff",
        "surfaceMuted": "#f6f7fb",
        "background": "#f6f7fb",
        "textPrimary": "#1f1f1f",
        "textSecondary": "#6d6d6d",
        "borderSubtle": "#ececec",
        "borderStrong": "#f0b7b7",
        "highlight": "#fff5f5"
      },
      "dark": {
        "primary": "#ef5350",
        "primaryStrong": "#e53935",
        "onPrimary": "#140102",
        "secondary": "#ffb74d",
        "success": "#66bb6a",
        "warning": "#ffb74d",
        "error": "#ef5350",
        "info": "#4fc3f7",
        "surface": "#1e1e1e",
        "surfaceMuted": "#26282c",
        "background": "#121417",
        "textPrimary": "#f5f5f5",
        "textSecondary": "#b0b4ba",
        "borderSubtle": "#32353a",
        "borderStrong": "#6b4242",
        "highlight": "#2c2020"
      }
    }
  },
  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 12,
    "lg": 16,
    "xl": 24,
    "xxl": 32
  },
  "radius": {
    "sm": 8,
    "md": 10,
    "lg": 12,
    "xl": 14,
    "pill": 999
  },
  "elevation": {
    "card": {
      "x": 0,
      "y": 8,
      "blur": 18,
      "spread": 0,
      "color": "#000000",
      "opacity": 0.08
    },
    "soft": {
      "x": 0,
      "y": 10,
      "blur": 30,
      "spread": 0,
      "color": "#111827",
      "opacity": 0.08
    }
  },
  "motion": {
    "duration": {
      "fast": 100,
      "normal": 200,
      "slow": 300
    },
    "easing": {
      "default": [0.4, 0, 0.2, 1],
      "in": [0.4, 0, 1, 1],
      "out": [0, 0, 0.2, 1],
      "spring": [0.175, 0.885, 0.32, 1.275]
    }
  },
  "components": {
    "card": {
      "radius": 14,
      "padding": 24,
      "elevation": "card"
    },
    "chip": {
      "radius": 999,
      "height": 32,
      "fontWeight": "bold"
    },
    "input": {
      "radius": 12,
      "height": 48
    },
    "tab": {
      "activeWeight": "bold",
      "indicatorHeight": 2
    },
    "emptyState": {
      "iconSize": 48,
      "titleSize": 20,
      "spacing": 12
    }
  },
  "typography": {
    "fontFamily": "-apple-system, BlinkMacSystemFont, \"Inter\", \"Segoe UI\", \"Roboto\", \"Helvetica Neue\", Arial, sans-serif, \"Apple Color Emoji\", \"Segoe UI Emoji\", \"Segoe UI Symbol\"",
    "scale": {
      "caption": 12,
      "body": 14,
      "bodyLarge": 16,
      "section": 20,
      "title": 24,
      "display": 32
    },
    "weight": {
      "regular": 400,
      "semibold": 600,
      "bold": 700,
      "extrabold": 800
    }
  }
}
